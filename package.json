{
  "name": "pyslackers_website",
  "description": "A package definition for maintaining versions for JS testing",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "autoprefixer": "^7.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "extract-text-webpack-plugin": "^3.0.2",
    "jquery": "^3.2.1",
    "leaflet": "^1.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.77.1",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "file-loader": "^1.1.5",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.9",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack-dev-server": "^2.9.5"
  },
  "scripts": {
    "lint": "eslint client",
    "start": "webpack-dev-server --config ./client/webpack.dev.js",
    "build:dev": "webpack --bail --watch --progress --config ./client/webpack.dev.js",
    "build:prod": "webpack --bail --progress --config ./client/webpack.prod.js"
  },
  "eslintIgnore": [
    "**/vendor/**/*.js",
    "*.min.js"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "prefer-template": "off",
      "comma-dangle": "off",
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": false
        }
      ],
      "indent": [
        "error",
        2
      ],
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        1,
        { "extensions": [".js", ".jsx"] }
      ]
    },
    "globals": {
      "window": true
    }
  }
}
